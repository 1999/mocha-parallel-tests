#!/usr/bin/env node

'use strict';

/**
 * CLI для работы с пакетом mocha-parallel-tests
 * mocha-parallel-tests [OPTIONS]
 *
 * [OPTIONS]
 * -R (reporter)
 * --timeout
 * --slow
 * _ (path)
 */
import {argv} from 'yargs';
import MochaParallelTests from '../';

if (!argv._.length) {
    console.error('Error: no target is specified');
    process.exit(1);
} else {
    MochaParallelTests(argv);
}
